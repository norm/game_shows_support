#!/usr/bin/env -S bash -euo pipefail
#
# savedata
#     backup and restore game save data
#
# Usage:
#     savedata backup|restore <name>
#
#     backup    copy the game state from the USB to a directory <name>
#     restore   copy the game state from directory <name> to the USB

USB_DRIVE='PS4STATE'
USB_DIR="PS4/SAVEDATA/5b3d959a7a3dc8cc/$GAME_ID"

dryrun=''
[ -n "${DRY_RUN:-}" ] && dryrun='-n'

case "$1" in
    backup)
        mkdir -p saves/$2
        rsync $dryrun -avP /Volumes/$USB_DRIVE/$USB_DIR/. saves/$2/.
        git add saves/$2
        ;;
    restore)
        rsync $dryrun -avP saves/$2/. /Volumes/$USB_DRIVE/$USB_DIR/.
        ;;
    list)
        ls -l saves
        ;;
    *)
        echo Unknown argument: "$1"
        exit 2
        ;;
esac
